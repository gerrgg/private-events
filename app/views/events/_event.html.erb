<div id="event-<%= event.id %>" class="event border m-1">
    <div class="card-body">
        <%= link_to event_image(event), event %>
        
        <div class="d-flex pt-2">
            <div class="flashy-date mr-4 text-center left">
                <span class="month"><%= event.event_date.strftime("%b") %></span>
                <span class="day"><%= event.event_date.day %></span>
            </div>
            <div class="right">
                <h5 class="card-title m-0"><%= link_to event.title, event, class: 'link-normal' %></h5>
                <div class="details">
                    <%= event.formatted_date %>
                    <p class="card-text"><%= event.location %></p>
                </div>
                <span class="attending text-muted">
                    <%= fa_icon('user', text: event.attendees.count ) %>
                </span>
            </div>
        </div>
    </div>
</div>