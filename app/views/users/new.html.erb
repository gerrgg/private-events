<h1>Register</h1>
<p>Already a user? <%= link_to 'Sign in here.', login_path %>

<%= form_for @user do |f| %>
    <%= render 'shared/errors', object: f.object %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>

    <div class="form-group">
        <%= f.submit 'Register', class: 'btn btn-success' %>
    </div>
<% end %>
